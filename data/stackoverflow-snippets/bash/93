#!/bin/bash

logfile=""/tmp/logs/mount.log""               # add 1 quote
timestamp=$( date ""+%Y-%m-%d %H:%M:%S"" )
mounts=(
    /reachengine 
    /reachdata/mongo 
    /reachbkups 
    /mnt/AsperaShares 
    /mnt/Editing 
    /mnt/VOD-World/Movies_in_ProRes51_Archive 
    /mnt/Production 
    /mnt/ReachEngine 
    /mnt/ITBackup 
    /mnt/reach 
    '/mnt/Ready for Air' 
    '/mnt/Ready for Reach'
)

while sleep 10m; do
    status=$(
        for mnt in ${mounts[@]}; do 
            mountpoint -q ""$mnt"" || echo ""$timestamp $mnt missing""
        done
    )
    if [ ""$status"" ]; then
        echo ""$status"" >> $logfile
        echo ""$status"" | mail -s ""Missing mount"" ####@###.##
    fi
done 
