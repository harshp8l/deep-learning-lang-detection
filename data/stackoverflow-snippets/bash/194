#!/bin/bash
isint()
{
    re='^[-]?[0-9]+$'
    [[ $1 =~ $re ]]
}

#args 1: name of result variable, 2: first addend, 3: second addend 
iadd()
{
    if isint ${2} && isint ${3} ; then
        echo ""$1=$((${2}+${3}));errno=0""
        return 0
    else
        echo ""errstr=\""Error: non-integer argument to iadd $*\"" ; errno=329""
        return 1
    fi
}

var=1
echo ""[1] var=$var""

eval $(iadd var A B)
if [[ $errno -ne 0 ]]; then
    echo ""errstr=$errstr""
    echo ""errno=$errno""
fi
echo ""[2] var=$var (unchanged after error)""

eval $(iadd var $var 1)
if [[ $errno -ne 0 ]]; then
    echo ""errstr=$errstr""
    echo ""errno=$errno""
fi  
echo ""[3] var=$var (successfully changed)""
