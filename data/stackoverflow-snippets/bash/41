#!/usr/bin/env bash

pattern=""ATGTGSDTST""                                                        
sub=""T""
# Get number of T in $pattern:
num=$(grep -o -n ""T"" <<< ""$pattern"" | cut -d: -f1 | uniq -c | grep -o ""[0-9]\+ "")                                                        
i=1                                                                         
text=$(sed -n ""s/T.*/T/p"" <<< ""$pattern"")                                   
echo $text                                                                  

while [ $i -lt $num ]; do                                                   
    text=$(sed -n ""s/\($sub[^T]\+T\).*/\1/p"" <<< ""$pattern"")                
    sub=$text                                                               
    echo $text                                                              
    ((i++))                                                                 
done          
