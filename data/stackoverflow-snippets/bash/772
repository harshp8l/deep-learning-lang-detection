function LSHEAD2 {

    while test $# -gt 0; do
            case ""$1"" in
                    -h)
                        shift
                            do_head=$1
                        shift
                        ;;
                    -t)
                        shift
                            do_tail=$1
                        shift
                        ;;
                    -f)
                        shift
                            file=$1
                        shift
                        ;;
                    *)
                       echo ""$1 is not a recognized flag!""
                       unset do_head;
                       unset do_tail;
                       unset file;
                       return 1;
                       ;;
            esac
    done    

    if [ -z $file ]
    then
        echo ""You need to specify a file!""
        unset do_head;
        unset do_tail;
        unset file;
        return 2;
    fi

    if [[ -z $do_tail && -z $do_head ]]
    then
        echo ""You need to specify either head '-h' or '-t' tail!""
        unset do_head;
        unset do_tail;
        unset file;
        return 3;
    fi

    if [ ! -z $do_head ]
    then
        head -${do_head} $file
    fi
    if [ ! -z $do_tail ]
    then
        tail -${do_tail} $file
    fi

    unset do_head;
    unset do_tail;
    unset file;
    return 0;
}
