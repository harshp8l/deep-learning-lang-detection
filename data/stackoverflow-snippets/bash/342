function sourceMenu(){

    while read item desc; do
        paires+=($item $desc)
    done < <(sed 's/;/\t/g' menus.csv) 

    dialog  --clear --backtitle ""1/4 Source des données"" \
            --menu ""Choix de la source de données :"" 10 70 3 \
                ${paires[*]} 2> $INPUT

    valret=$?

    case $valret in
        0)  
            case `cat $INPUT` in
                Podcast) show_date;;
                Livre_audio) show_calendar;;
                Url) sourceUrlInput;;
            esac;;
        1)   
            cleanExit
    esac
}
