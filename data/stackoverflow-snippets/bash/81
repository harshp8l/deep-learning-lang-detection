#!/bin/bash
#
# 0 4 12 => 12x^3
# 2 4 12 => 12x
# 3 4 12 => 12
term () {
  p=$1
  leng=$2
  fac=$3
  pot=$((leng - 1 - p))
  case $pot in
    0)  echo -n '+'${fac}  ;;
    1)  echo -n '+'${fac}x ;;
    *)  echo -n '+'${fac}x^$pot ;;
  esac
}

handleArray () {
  # mapfile puts a counter into the array, starting with 0 for the 1st
  # get rid of it!
  shift
  coeffs=($*)
  # echo ${coeffs[@]}
  cnt=0
  len=${#coeffs[@]}
  while (( cnt < len ))
  do
    if [[ ${coeffs[$cnt]} != 0 ]]
    then
      term $cnt $len ${coeffs[$cnt]}
    fi
    ((cnt++))
  done
  echo # -e '\n' # extra line for dbg, together w. line 5 of the function.
}

mapfile -n 0 -c 1 -C handleArray < ./koeffs.txt coeffs | sed -r ""s/^\++//;s/\++$//;""
