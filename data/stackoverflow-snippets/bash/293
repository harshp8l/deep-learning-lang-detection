#!/bin/bash

gawk 'BEGIN{RS=""\n\n([/][*]|[/]{2,2})""} 
        { 
        if ($0 ~ /#README/){
                system(""echo -e \""\nThis is a Readme.md\n--------\n"" $0 ""\"""")
        }else if ($0 ~ /class /){
                system(""echo -e \""\nThis is a class\n---------\n/*"" $0 ""\"""")
        }else if ($0 ~ /require /){
                system(""echo -e \""\nthis is a conf\n-----------\n"" $0 ""\"""")
        }else if($0 ~ /[/]{2,2}.*\n[/]{2,2}/){
                system(""echo -e \""\nthis is a note\n-----------\n"" $0 ""\"""")
        }

}' your_script.lang
