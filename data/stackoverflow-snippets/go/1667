package main

import (
        ""bufio""
        ""flag""
        ""fmt""
        ""io""
        ""log""
        ""os/exec""
)

func main() {
        cmd := flag.String(""cmd"", ""none"", ""command to run and loop output back to input"")
        flag.Parse()
        process := exec.Command(*cmd)
        input, err := process.StdinPipe()
        if err != nil {
                log.Fatalln(err)
        }
        output, err := process.StdoutPipe()
        if err != nil {
                log.Fatalln(err)
        }
        errors, err := process.StderrPipe()
        if err != nil {
                log.Fatalln(err)
        }
        err = process.Start()
        if err != nil {
                log.Fatalln(err)
        }
        _, err = io.Copy(input, output)
        if err != nil {
                log.Println(err)
        }
        err = input.Close()
        if err != nil {
                log.Fatalln(err)
        }
        errorsScanner := bufio.NewScanner(errors)
        for errorsScanner.Scan() {
                fmt.Println(errorsScanner.Text())
        }
        err = process.Wait()
        if err != nil {
                log.Fatalln(err)
        }
        fmt.Println(""all done"")
}
