package main

import (
    ""fmt""
    ""time""
)

func main() {
    var a = 0

    ticker := time.NewTicker(1)
    timeChan := ticker.C
    tickChan := time.NewTicker(time.Millisecond * 500).C

    for {
        select {
        case <-timeChan:
            fmt.Println(""weekly updated"")
            if a == 0 {
                ticker.Stop()
                timeChan = time.NewTicker(time.Second * 2).C
            }
            a = 1
        case <-tickChan:
            if a == 1 {
                fmt.Println(""daily check"")
            } else {
                fmt.Println(""Not updateï¼Ÿ"")
            }
        default:
        }
    }
}
