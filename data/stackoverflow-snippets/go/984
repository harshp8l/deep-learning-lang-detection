func multiplexer(w http.ResponseWriter, r *http.Request) {
    switch r.method {
    case ""GET"":
        getHandler(w, r)
    case ""POST"":
        postHandler(w, r)
    }
}

func getHandler(w http.ResponseWriter, r *http.Request) {

    //Match r.URL.path here as required using switch/use regex on it
}

