package main

/*
#include <string.h>
#include <stdlib.h>
#include <stdio.h>

void my_reverse(char* src, char *dst){
  printf(""[c-part] src=%s\n"", src);
  int n = strlen(src);
  for (int i = 0; i < n ; ++i)
  {
    dst[i] = src[n - 1 - i];
