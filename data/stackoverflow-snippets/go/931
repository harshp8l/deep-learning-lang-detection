    objectDetected := false
    i := 0
decodeLoop:
    ...
                if b == '{' {
                    // If we already encountered an object and found ourselves here again,
                    // it's not really a valid JSON object.
                    if objectDetected {
                        break
                    }
                    objectDetected = true
                    br.UnreadByte()
                    ...
        fmt.Printf(""%3d: %+v\n"", i, ev)
        objectDetected = false
    } // decode loop end
}
