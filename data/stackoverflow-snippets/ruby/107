#!/bin/bash

# echo > output.txt         # uncomment to write in a file output.txt

mix(){
    {
        echo ""$title""
        line=""$( fold -w1 <<< ""$line""  | shuf  )""
        echo ""${line//$'\n'}"" | fold -w3
    }  # >> output.txt         # uncomment to write in a file output.txt
    unset line
}

while read -r; do
    if [[ $REPLY =~ ^\> ]]; then
        mix
        title=""$REPLY""
    else
        line+=""$REPLY""
    fi
done < filename.txt
mix       # final mix after loop's exit, otherwise line3 will be not mixed

exit
