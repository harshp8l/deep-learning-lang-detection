!/usr/bin/ruby

class Customer
      @@total_customers = 0
      def initialize(id, name, addr)
          @cust_id = id
          @cust_name = name
          @cust_addr = addr
          @@total_customers +=1;
      end

      def display_details()
          puts ""Customer id #{@cust_id}""
          puts ""Customer name #{@cust_name}""
          puts ""Customer address #{@cust_addr}""
      end

      def total_no_of_customers() 
          puts ""Total number of customers: #{@@total_customers}""
      end
    end
