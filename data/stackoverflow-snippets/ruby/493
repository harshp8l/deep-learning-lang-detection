a = {'1' => 'A',
     '2' => 'B',
     '3' => 'C',
     '4' => { '5' => 'D', '6' => 'E', '7' => { '8' => 'F', '9' => 'G' }},
     '10' => {'11' => 'H'}}

def flatten_hash(hash)
  hash.each_pair.reduce({}) do |h, (k, v)|
    v.is_a?(Hash) ? h.merge(flatten_hash(v)) : h.merge(k => v)
  end
end

# pry(main)> flatten_hash(a)
#=> {""1""=>""A"", ""2""=>""B"", ""3""=>""C"", ""5""=>""D"", ""6""=>""E"", ""8""=>""F"", ""9""=>""G"", ""11""=>""H""}
