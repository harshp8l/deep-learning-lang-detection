       ""portrait"", ""portrait"", ""portrait"", ""portrait"", ""portrait"", ""portrait"",
      ""landscape"", ""landscape""]

rearrange arr
  #=> [""portrait"", ""portrait"", ""portrait"", ""portrait"", ""landscape"",
