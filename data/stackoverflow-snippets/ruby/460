<%= simple_form_for(@post) do |f| %>
    <% if @quota_exceeded %>
    <div class=""form-group"">
      <div class=""col-6"">
        <%= f.error_notification %>
      </div>
    </div>
    <% else %>
    <div class=""form-group"">
      <div class=""col-5"">
        <label for=""post-title"">Post Title</label>
        <%= f.input :post_title, class: 'form-control', label: false, required: true, placeholder: '' %>
      </div>
    </div>
<% end %>
<% end %>
