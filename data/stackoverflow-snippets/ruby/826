Rails.application.routes.draw do                                                                                                                 
  namespace :api do                                   
    namespace :v1 do                                  
      resource :users do                              
        resources :types, only: :show, param: :type_id
        collection do                             
          # other routes in the same namespace        
          get ""sync""                                  
          post ""register""                             
        end                                           
      end                                             
    end                                               
  end                                                 
end                                                   
