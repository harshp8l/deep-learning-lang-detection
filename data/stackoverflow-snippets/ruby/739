def pivot(arr, column)
  arr
    .flat_map do |hash|
      hash
        .to_a
        .delete_if { |key, _| key == column }
        .map! { |data| data << hash[column] }
    end
    .group_by(&:shift)
    .map { |name, outer| {
      name: name.to_s,
      data: outer
        .group_by(&:last)
        .transform_values! { |inner| inner.sum(&:first) }
        .delete_if { |_, sum| sum.zero? }
    }}
end

pivot(@data, :time) # => [{:name=>""A"", :data=>{""2017-11-16""=>2, ""2017-11-21""=>6}}, ..
