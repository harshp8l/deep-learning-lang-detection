class Routes                                                                                                            
  def self.routes                                                                                                       
    Proc.new do                                                                                                         
      match 'url', 'foo#bar'                                                                                            
      match 'url2', 'foo#baz'                                                                                           
    end                                                                                                                 
  end                                                                                                                   
end 
