class Temperature

  def initialize(input)
    puts ""in #{self.class}.#{__method__}, input.class.name is:""<<"" #{input.class.name}""
    @f, @c = input[:f], input[:c]
    raise ""Only one input, please!"" if @f and @c
  end

  def in_fahrenheit
    return @f if @f
    c = @c * 1.8
    c += 32
    @f = c.floor
    @f 
  end

  def in_celsius
    return @c if @c
    f = @f - 32
    f /= 1.8
    @c = f.floor
    @c 
  end

  def fahrenheit
    return @f if @f
    in_fahrenheit
  end 

  def celsius
    return @c if @c
    in_celsius
  end

end
