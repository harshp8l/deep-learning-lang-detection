require 'stringio'
require 'ox'

class Sample < ::Ox::Sax
  def start_element(name); puts ""start: #{name}"";        end
  def end_element(name);   puts ""end: #{name}"";          end
  def attr(name, value);   puts ""  #{name} => #{value}""; end
  def text(value);         puts ""text #{value}"";         end
end

io = StringIO.new(%{
<top name=""sample"">
  <middle name=""second"">
    <bottom name=""third""/>
  </middle>
</top>
})

handler = Sample.new()
Ox.sax_parse(handler, io)
