require 'thread'
require 'benchmark'

def fibbinaci(n=33)
  return n if n <= 1
  fibbinaci(n-1) + fibbinaci(n-2)
end

LOOPS = 5

Benchmark.bm do |x|
  x.report(""Single threaded"") do
    LOOPS.times { fibbinaci }
  end

  x.report(""Multithreaded"") do
    LOOPS.times.map do
      Thread.new { fibbinaci }
    end.each(&:join)
  end

  x.report(""Forked"") do
    LOOPS.times do
      fork do
        fibbinaci
      end
    end
    Process.waitall
  end unless RUBY_PLATFORM == ""java""
end
