input = [
  [""< start >"", ""The   < object >   < verb >   tonight.""],
  [""< object >"", ""waves"", ""big    yellow       flowers"", ""slugs""]
]

massaged_input = input.map{|arry| [arry.slice!(0), arry.join.squeeze("" "")] }
 # => [[""< start >"", ""The < object > < verb > tonight.""], [""< object >"", ""wavesbig yellow flowersslugs""]]    

Hash[massaged_input]
 # => {""< start >""=>""The < object > < verb > tonight."", ""< object >""=>""wavesbig yellow flowersslugs""} 
