public class AggregateService
{
    public AggregateService(
        IService1 firstService,
        IService2 secondService,
        IService3 thirdService,
        IService4 fourthService)
    {
        FirstService = firstService;
        SecondService = secondService;
        ThirdService = thirdService;
        FourthService = fourthService;
    }

    public IService1 FirstService {get;}
    public IService2 SecondService {get;}
    public IService3 ThirdService {get;}
    public IService4 FourthService {get;}
}
