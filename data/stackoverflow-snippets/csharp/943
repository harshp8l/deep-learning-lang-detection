Console.WriteLine(new decimal(new int[] {1, 0, 0, 0}) );
Console.WriteLine(new decimal(new int[] {10, 0, 0, 0}) );
Console.WriteLine(new decimal(new int[] {100, 0, 0, 0}) );
Console.WriteLine(new decimal(new int[] {-1, 0, 0, 0}) );
Console.WriteLine(new decimal(new int[] {-10, 0, 0, 0}) );
Console.WriteLine(new decimal(new int[] {-100, 0, 0, 0}) );
Console.WriteLine(new decimal(new int[] {int.MaxValue, 0, 0, 0}) );     
Console.WriteLine(new decimal(new int[] {-int.MaxValue, 0, 0, 0}) );        
