    @section scripts
    {
        <script>
            $('#myModal').modal('hide');
            $('#showModal').click(function () { $('#myModal').modal('show'); });
            $('#fire').click(function (){
                $('#myModal').modal('hide');
                //FIRE GET REQUEST WHEN RETURNING A FILE IT WILL FORCE DOWNLOAD WITHOUT PAGE NAVIAGTION
                window.location = "/Home/DownloadCSV?location=" + $('#locationTypeId').val();
            });
        </script>
    }
