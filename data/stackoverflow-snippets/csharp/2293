private void noi_MouseDown(object sender, MouseEventArgs e)
        {
            if (e.Button == MouseButtons.Left)
            {
                LEFTORRIGHT = ""left"";
            }
            if (e.Button == MouseButtons.Right)
            {
                LEFTORRIGHT = ""right"";
            }
        }
