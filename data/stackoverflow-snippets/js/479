<!DOCTYPE html>
<html>
    <body>
        <img id='image' src='ODDEGqc.jpg' />
        <script type='text/javascript'>
            var testCSS = { 
                size: null,
                color: null,
                source: 'ODDEGqc.jpg'
            }
            var srcImagePathArray = document.getElementById('image').src.split(""/"");
            var srcImageName = srcImagePathArray[srcImagePathArray.length - 1];
            console.log(""srcImageName: "" + srcImageName);
            var cssImagePathArray = testCSS.source.split(""/""); //this will work even if testCSS.source has no slashes in it
            var cssImageName = cssImagePathArray[cssImagePathArray.length - 1];
            console.log(""cssImageName: "" + cssImageName);
        </script>
    </body>
</html>
