let converti_tempo = (fun x -> if x < 0 then failwith ""error"" else if x < 1000 then (0, 0, x) else 
                                                                                               let rec m = x % 1000
                                                                                               let s = (x / 1000) % 60
                                                                                               let mm = ((x / 1000) / 60) % 60
                                                                                               in (mm,s ,m ));;
