#include <iostream>

using namespace std;

void sort(int* arr, int sz, int n, int m)
{
    int temp;
    for (int i = 0; i < sz; i++)
    {
        for (int j = 0; j < sz-i; j++)
        {
            //do nothing when both values lie on the range
            if (j-1>=n && j<=m){
              continue;
            }
            //if one value of the values is on the bounds of the range
            if (j==n || j-1==m)
            {
                //safety check
              if (j == 0){
                continue;
              }
              //safety checks
              if (m+1 <= sz-1 && n-1 >= 0){
              //swap check for values on either side of range
                if (arr[n - 1] > arr[m+1])
                {
                    temp = arr[n-1];
                    arr[n-1] = arr[m+1];
                    arr[m+1] = temp;
                }
              }
            }
            //if no values is on range, normal swap check for values applies
            else
            {
                 if (arr[j - 1] > arr[j])
                {
                  temp = arr[j - 1];
                  arr[j - 1] = arr[j];
                  arr[j] = temp;
                }
            }
        }
    }
}

int main() {
    const int SIZE = 6;
    const int LOWER = 1;
    const int UPPER = 3;
    int arr[SIZE] = {10, 4, 11, 7, 6, 20};
    sort(arr, SIZE, LOWER, UPPER);
    for (int i = 0; i < SIZE; i++){
        cout << arr[i] << "" "";
    }

    return 0;
}
