#include<iostream>
#include<string>
#include<vector>
#include<thread>
#include<mutex>
static std::vector<std::string> glm;
std::mutex mut;
void addMap(std::vector<std::string> &glm, std::string name)
{
    mut.lock();
    glm.push_back(name);
    std::cout << ""Add: "" << name << ""\n"";
    mut.unlock();
}


int main()
{
    std::thread t[4];
    std::vector < std::string> names = { ""Hellen"", ""Peter"", ""Bob"", ""Zoe"" };

    for(int i = 0; i < names.size(); i++)
    {
        t[i] = std::thread(addMap, glm, names[i]);
    }

    for(int i = 0; i < names.size(); i++)
    {
        t[i].join();
    }
}
