void shuffle()
{
    for (int i = 0; i < 100; i ++)
    {
        for (unsigned int n = deck.size(); n > 1; --n)
        {
            unsigned swapPosition = rand() % n;

            card *swap = deck[n-1];
            deck[n-1] = deck[swapPosition];
            deck[swapPosition] = swap;
        }
        cout << ""shuffled deck: "";
        for (unsigned int n = 0; n < deck.size(); n++)
            cout << deck[n]->compare() << "" "";
        cout << endl;
    }
}
