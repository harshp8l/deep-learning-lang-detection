// reading a text file
#include <iostream>
#include <fstream>
#include <string>
#include <vector>
#include <sstream>
using namespace std;

int main () {
  string line;
  ifstream myfile (""database.txt"");
  if (myfile.is_open())
  {
    while ( getline (myfile,line) )
    {
      std::string str = line;
      std::vector<string> vect;

      vect = split(str, ',') ;

      for (int i=0; i< vect.size(); i++)
        std::cout << vect.at(i)<<std::endl;
        //cout << line << '\n';
      }

    myfile.close();
  }

  else cout << ""Unable to open file""; 

  return 0;
}
