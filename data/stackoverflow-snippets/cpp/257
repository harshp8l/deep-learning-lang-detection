#include <iostream>
#include <cstring>
#include <utility>
#include <functional>

char * reverse( char *s )
{
    std::function<void( char *, size_t )> reverse 
    ( 
        [&]( char *s, size_t n )
        {
            if ( not ( n < 2 ) ) 
            {
                std::swap( s[0], s[n-1] );
                reverse( s + 1, n - 2 );
            }
        } 
    );

    reverse( s, std::strlen( s ) );

    return s;
}

int main() 
{
    char s[] = ""Hello"";

    std::cout << s << std::endl;
    std::cout << reverse( s ) << std::endl;

    return 0;
}
