int arr[10][10];

      for(int i = 0; i < 10; i++) {
          bool last_was_character = false;
          cout << i;
          for(int j = 0; j < 10; j++) {
              cout << "| ";
              last_was_character = false;
              if(has_to_print_character)
              {
                  cout << some_character;
                  last_was_character = true;
              }
          }
          if (last_was_character) cout << "|";
          cout << endl;
      }
