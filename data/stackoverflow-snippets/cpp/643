#include <iostream>
#include <cmath>
using namespace std; 
int main() {

    float x, y, z;

    cout << ""Enter the three angles : \n ""; 
    cin >> x >> y >> z;

    if (x <= 0 || y <= 0 || z <= 0) {
        cout << ""Invalid angles"" << endl;
        system(""pause"");
        return 0;
    }

    switch (static_cast<int>(round(x + y + z))){
        case 180:
            cout << ""Valid triangle"" << endl;;
            break;
        default:
            cout << ""A triangle is Not valid !! \n "";
    }
    system(""pause"");
}
