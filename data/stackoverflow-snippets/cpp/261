#include <iostream>
#include <map>
#define optimizar_io ios_base::sync_with_stdio(false);cin.tie(NULL);
using namespace std;

const int LN = 1e5;
long long N, M, num[LN];
map < long long, int > sum;

int main() {

    optimizar_io

        cin >> N >> M;

    sum[0]++;

    long long cont = 0, tmax = 0, res = 1, val;
    map < long long, int > :: iterator best;

    for (int i = 0; i < N; i++)
    {
        cin >> num[i];
        cont = (cont + num[i]) % M;
        if (tmax == cont)
            res += sum[0];
        if (tmax < cont)
            tmax = cont, res = sum[0];
        best = sum.lower_bound(cont + 1);
        if (best != sum.end())
        {
            val = cont - (*best).first + M;
            if (tmax == val)
                res += (*best).second;
            if (tmax < val)
                tmax = val, res = (*best).second;
        }
        sum[cont]++;
    }

    cout << tmax << "" "" << res;

    return 0;
}
