#include <iostream>
#include <fstream>

int main() {
    std::ifstream inFile;
    inFile.open(""Horoscope.txt"");
    if (!inFile)
    {
        std::cerr << ""Error: Input file opening failed\n"";
        return EXIT_FAILURE;
    }

    int punct = 0;
    char input = ' ';
    while (inFile >> input)
    {
        if (ispunct(input))
        {
            punct++;
        }   
    }
    inFile.close();
    std::cout << ""There are "" << punct << "" punctuation marks in the text file"" << std::endl;
}
