#include <iostream>
using namespace std;
long fibona_even_sum (long k);

int main()
{
    const long N=4000000;
    cout << ""Sum of even Fibonacci numbers: "" <<endl;
    cout << fibona_even_sum(N) <<endl;
}

long fibona_even_sum(long N_max)
{
    long first = 0 , second = 1;
    long sum=0;

    while(true)
    {
        long first_copy=first;
        first=second;
        second+=first_copy;
        if(second>N_max)
            return sum;
        if(!(second%2))
            sum+=second;
    }
}
