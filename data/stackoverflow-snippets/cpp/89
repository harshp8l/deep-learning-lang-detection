#include <boost/property_tree/json_parser.hpp>
#include <iostream>
using boost::property_tree::ptree;

std::istringstream sample_json();
ptree sample_ptree();

int main() {
    write_json(std::cout, sample_ptree());
}

std::istringstream sample_json() {
    return std::istringstream(R""({
        ""fibonacci"": {
            ""type"": ""series"",
            ""entities"": {
                ""golden_ratio"": {
                    ""ratio"": 2.3
                },
                ""function"": {
                    ""power_series"": 2
                }
            }
        }
    })"");
}

ptree sample_ptree() {
    ptree pt;
    {
        auto stream = sample_json();
        read_json(stream, pt);
    }
    return pt;
}
