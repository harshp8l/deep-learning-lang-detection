#include <iostream>
#include <sstream>
#include ""ThreadPool.h""

int main() {
    {
        ThreadPool pool{ 4 }; // 4 threads

        auto f1 = pool.enqueue( [] {
            return 2;
        } );

        auto f2 = pool.enqueue( [] {
            return 4;
        } );

        auto a = f1.get();
        auto b = f2.get();

        auto f3 = pool.enqueue( [&] {
            return a + b;
        } );

        auto f4 = pool.enqueue( [] {
           return a * b;
        } );

        std::cout << ""f1 = "" << a << '\n' <<
                  << ""f2 = "" << b << '\n' <<
                  << ""f3 = "" << f3.get() << '\n' <<
                  << ""f4 = "" << f4.get() << '\n';
    }                 

    std::cout << ""\nPress any key and enter to quit.\n"";
    std::cin.get();
    return 0;
}
