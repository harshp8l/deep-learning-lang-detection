#include <thread>
#include <iostream>
#include <string>
#include <unistd.h> // for sleep

int main()
{
    std::thread t{
        [] {
            std::string s;
            while (std::cin >> s)
                if (s == ""exit"")
                {
                    std::cout << ""exit command given on stdin\n"";
                    exit(0);
                }
        }
    };
    t.detach();

    while (true)
    {
        sleep(2);
        std::cout << ""beat\n"";
    }
}
