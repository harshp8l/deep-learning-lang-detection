#include<iostream>
#include<fstream>
#include<cstdlib>
#include<cctype>
using namespace std;

int main()
 {
  int dummycount=1,count=1;
  char next_char;
  ifstream input_file;

  input_file.open(""<file-name>"");

  if (input_file.fail()){
    cout << ""Could not open file\n"";
    exit(0);
  }

  while (!input_file.eof()){
    input_file.get(next_char);
    if(isspace(next_char)){
      count++;
      dummycount++;
    }else{
      if (dummycount>0){
        cout << "" "";
      }
      dummycount=0;
      cout << static_cast<char> (tolower(next_char));
   }
 }
 input_file.close();
 cout << ""Total words:"" << count<< endl;
}
