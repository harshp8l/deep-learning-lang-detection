#include <iostream>
#include <string>
using namespace std;
int main (){
   int integer=0;
   int total = 0;
   int even_count = 0;
   int odd_count = 0;
   cout << "Total is " << total << endl;
   while ( total <=30 && integer <=30){
      cout << "Please enter an integer: ";
      cin >> integer;
      total = integer + total;  
      if(total <=30){
        cout << "Total is " << total << endl;
      }
      if (integer % 2 == 0) {
        even_count = even_count + 1;
      }
      if (integer % 2 == 1){
        odd_count = odd_count + 1;
      }
   }   
   cout << "You had " << even_count << " even numbers and " << odd_count << 
" odd numbers." << endl;   
}
