#include <iostream>

using namespace std;

int main () {    
    int n;    
    cout << ""please put the size of the array "" ;    
    cin >> n; 
    int* Arr = new int[n]; //dynamically allocate an array to hold n int on the heap
    cout << ""please enter array's elemets "";    
    for (int k=0; k<n ; k++) {    
        cin >> Arr[k];    
    }    
    for (int i=0;i<n;i++){    
        cout << Arr[i] << endl;    
    }    
    delete [] Arr; //make sure to clean up the heap memories
}
