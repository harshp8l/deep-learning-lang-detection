#include<iostream>
using namespace std;
void display();
string array[2][5];

int main()
{
    for (int x = 0; x < 2; ++x)
    {
        for (int y = 0; y < 5; ++y)
        {
            display();
            cout << ""Enter a value for [""<<x+1<<""][""<<y+1<<""]: "";
            std::getline(std::cin, array[x][y]);
            system(""cls"");
        }
    }
   display();
}

void display()
{
     for(int x = 0; x<2; x++)
     {
        for(int y = 0; y<5; y++)
            cout<<"" "" <<array[x][y] <<"" "";
        cout<<endl;
    }
}
