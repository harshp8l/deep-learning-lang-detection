#include <iostream>
#include <string>

struct node
{
    char data;
    node *left;
    node *right;
};

node * newNode( char key )
{
    return new node { key, nullptr, nullptr };
}

void insertCharsInTree( node * &root, const std::string &s )
{
    for ( char c : s )
    {
        node **current = &root;

        while ( *current )
        {
            if ( c < ( *current )->data ) current = &( *current )->left;
            else current = &( *current )->right;
        }

        *current = newNode( c );
    }
}

int main() 
{
    node *head = nullptr;

    insertCharsInTree( head, ""Hello"" );

    return 0;
}
