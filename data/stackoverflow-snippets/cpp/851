#include <iostream>
#include <cmath>
#include <vector>
#include <algorithm>
//Standard library
using namespace std;

//enter function main
int main()
{
    int num;
    std::vector<int> digits;
    int sum = 0;
    int pwr = 0;

    cout << ""Enter an integer: "" << endl;
    cin >> num;
    cout << endl;
    while (num) {
        while (num) {
            int temp = num % 10;
            digits.push_back(temp);
            sum += temp;
            num /= 10;
        }
        std::reverse(digits.begin(), digits.end());
        cout << sum << endl;
        for(auto & a : digits)
        {
            cout << a << "" "";
        }
        cout << endl;
        cout << ""Enter another integer: "" << endl;
        cin >> num;
        cout << endl;
    }

    return 0;
}
