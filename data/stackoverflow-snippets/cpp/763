#include ""stdafx.h""
#include <iostream>
#include <limits>

using namespace std;

int main()
{
    int userInput;

    cout << ""Please enter a numeric value : "";
    while (!(cin >> userInput))
    {
        cin.clear();
        cin.ignore(numeric_limits<streamsize>::max(), '\n');
        cout << ""Please enter a valid numeric value: "";
    }

    cout << ""\nYour input "" << userInput << "" is a valid numeric input."" << endl;

    system(""pause"");
    return 0;
}
