#include <iostream>
#include <vector>
#include <algorithm>
#include <string>

int main() 
{
    std::vector<std::string> v = 
    {
        ""Egg"", ""Milk"", ""Sugar"", ""Chocolate"", ""Flour""
    };

    const char *src = ""Sugar"";
    const char *dsn = ""Honey"";

    auto it = std::find( v.begin(), v.end(), src );

    if ( it != v.end() ) *it = dsn;

    for ( const auto &s : v ) std::cout << s << ' ';
    std::cout << std::endl;

    return 0;
}
