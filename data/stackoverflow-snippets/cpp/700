#include <iostream>
#include <string>
#include <sstream>

int main() {
    std::string input;
    std::stringstream sstr;
    int value = 0;
    std::cout << ""Input: "";
    std::cin >> input;
    for (int i = 0; i < input.size(); i++) {
        sstr << int(input[i]) << "" + "";
        value += input[i];
    }

    std::string str(sstr.str());
    std::cout << ""Ascii Value:"" << str.substr(0, str.size() - 3) << "" = "" << value << std::endl;

    return 0;
}
