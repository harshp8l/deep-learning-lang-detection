void HelloWorld_t::yammInit()   // yet-another-macro-mess
{
   if(ssDiag) (*ssDiag) << ""\n  yammInit()"";
   // invoke yamm macros to init yamm
}

void HelloWorld_t::yammEnd()   // yet-another-macro-mess
{
   if(ssDiag) (*ssDiag) << ""\n  yammEnd()"";
   // invoke yamm macros to end yamm
}

