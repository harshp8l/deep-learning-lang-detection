#include <iostream>
#include <string>
#include <vector>

using namespace std;

int main()
{
    string s;

    vector<int> capCount(26, 0), smallCount(26, 0);

    cout << ""Enter the string\n"";
    cin >> s;

    for(int i = 0; i < s.length(); ++i)
    {
        char c = s.at(i);

        if(c >= 'A' && c <= 'Z')
            ++capCount[(int)c - 65];

        if(c >= 'a' && c <= 'z')
            ++smallCount[(int)c - 97];
    }

    for(int i = 0; i < 26; ++i)
    {
        if(capCount[i] > 0)
            cout << (char) (i + 65) << "": "" << capCount[i] << endl;

        if(smallCount[i] > 0)
            cout << (char) (i + 97) << "": "" << smallCount[i] << endl;
    }
}
