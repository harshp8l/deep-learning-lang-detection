#include <iostream>
#include <stdlib.h>
#include <ctime>
#include <cmath>
using namespace std;

int main(){

    int N;
    cout << ""Please enter N amount of steps, and for NetBeans users press 
    'enter' twice."" << endl;
    cin >> N;
    cout << ""% RandomWalker "" << N << endl;;

int r;

srand( time(0)); 

    int x = 0;
    int y = 0;


    cout << ""("" << x << "", "" << y << "")"" << endl;

    for(int i = 1; i <= N; i++) {


        r=rand()%4; 


        if (r == 0 ) 
                        x++;

        else if (r == 1 ) 
                        x--;

        else if (r == 2 ) 
                        y++;

        else if (r == 3 ) 
                        y--;

                    cout << ""("" << x << "", "" << y << "")"" << endl;

                } 




    x = (pow(x,2));
    y = (pow(y,2));                

    int squaredDistance = x + y;

    cout << ""The squared distance is "" << squaredDistance << endl;
