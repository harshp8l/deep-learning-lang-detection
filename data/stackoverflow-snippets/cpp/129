#include <iostream>

using std::cout;
using std::endl;

class B {
public:
    void foo() { cout << ""foo"" << endl; };
    void bar() { cout << ""bar"" << endl; };
    void foz() { cout << ""foz"" << endl; };
};

class A {
protected: // <===== THIS IS THE SIGNIFICANT BIT
    B b; 
public:
    A() {
        b.foo();
        b.bar();
        b.foz();
        cout << ""A constructor"" << endl;
    };
};


int main(int argc, char** argv) {
    A myA;
    return 0;
}
