int main()
{
    int employees, days, average=0;
    cout << "How many employees in the company?";
    cin >> employees;
    for (int i = 0; i < employees; i++)
    //loops and gets the number of days absent from each employee
    {
        average += numEmployees(employees);
    }
    cout << average/employees;
    return 0;
}
int numEmployees(int employees)
//function that gets the number of days absent from each employee
{
    int days; 
    cout << "How many days has this employee missed?" << endl;
    cin >> days;
    return days;
}
