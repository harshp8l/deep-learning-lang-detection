#include<iostream>
void display();
char array[2][5];

using namespace std;

int main() {

    for (int x = 0; x < 2; ++x) {
        for (int y = 0; y < 5; ++y) {

            display();
            cout << ""Enter a value: "";
            cin>>array[x][y]; 

           if(array[x][y]=="" "";
            break;
            system(""cls"");
        }
    }

    display();
}

void display() {

    for(int x = 0; x<2; x++) {
        for(int y = 0; y<5; y++) {
            cout<<"" "" <<array[x][y] <<"" "";
        }  
        cout<<endl;
    }
}
