switch (pl1)
{
    case 'R':
    case 'r':
    {
        switch(pl2)
            case 'P':
            case 'p':
        {
            cout << ""Paper beats Rock."" << endl;
            cout << ""Player 2 WINS!"" << endl;
            break;
        }
            case 'S':
            case 's':
        {
            cout << ""Rock smashes Scissors."" << endl;
            cout << ""Player 1 WINS!"" << endl;
            break;
        }
        break;
    }
    break;
}
