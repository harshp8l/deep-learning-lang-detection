#include <iostream>
#include <conio.h>  

int main()
{
    int x = 0;
    while (true)
    {
        if (!_kbhit())
            continue;

        switch (_getch())
        {
        case 'A':
            x == 0 ? ++x : x = 0;
            break;
        case 'B':
            x == 1 ? ++x : x = 0;
            break;
        case 'C':
            x == 2 ? ++x : x = 0;
            break;
        default:
            x = 0;
        }

        if (x == 0)
            std::cout << ""Oops!"" << std::endl;
        else if (x == 3)
        {
            std::cout << ""Bingo!"" << std::endl;
            break;
        }
    }
}
