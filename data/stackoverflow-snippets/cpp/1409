#include <iostream>
#include <string>

int main()
{
    int arr[2][2];
    std::cout << "Enter four values: ";

    //loop through each row
    for (auto& row : arr) {
        //loop through each column
        for (auto& col : row) {
            std::cin >> col;
            //obtain input
        }
    }

    for (auto& row : arr) {
        for (auto& col : row) {
            std::cout << col << ' ';
        }
        std::cout << std::endl;
    }

    //do what you want with the array
}
