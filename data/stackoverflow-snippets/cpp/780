#include <iostream>
using namespace std;

 int main()
{
  int userNum, palindrome[100], rem, rem2, count=0, count2=0, compare,  
   compare2;
  bool flag;

cout << ""Enter number to test for Palindrome: "";
cin >> userNum;

compare = userNum;
compare2 = userNum;

// counting the digits in the number.
do {
    rem = compare % 10;
    count += 1;
    compare /= 10;
} while (compare >= 1);

// inputing in an array.
for (int i=0; i<count; i++)
{
    rem2 = compare2 % 10;
    palindrome[i] = rem2;
    compare2 /=10;
}

// Comparing array with palindrome.
for (int i=0; i < count; i++)
{
    if (palindrome[i] != palindrome[count-i-1])
        count2 = 1;
}

if (count2 == 1)
    cout << ""Not a palindrome."";
else
    cout << ""Palindrome\n"";

return 0;




    }
