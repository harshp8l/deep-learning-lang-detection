void Reverse(std::string &str)
{
    int n = str.length();
    for(int i = 0; i < n / 2; i++)
    {
        char temp = str[i];
        str[i] = str[n - i - 1];
        str[n - i - 1] = temp;

        //You also can use stl algorithm to do the swap for you like below
        //std::swap(str[i], str[n - i - 1]);
    }

}
