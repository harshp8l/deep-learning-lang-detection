#include <iostream>
#include <vector>

int main()
{
    std::string line = ""Number:Description:Price:Weight"";

    std::vector<std::string> vecStrings;
    std::string word;
    size_t count = 0;

    for (auto const& it : line)
    {
        if (it != ':') word += it;

        if ((it == ':') || (count + 1 == line.size()))
        {
             vecStrings.emplace_back(word);
             word.clear();
        }
        ++count;
    }

    for(const auto& it: vecStrings) 
        std::cout << it << ""\n"";

    return 0;
}
