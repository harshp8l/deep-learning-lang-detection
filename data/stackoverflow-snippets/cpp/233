#include <cstdio>
#include <iostream>

// first type the shortcut for EOF, then a single character

int main() {
    using namespace std;

    char ch;
    cin >> ch;             // 1

    cin.clear();           // 2

    cout << boolalpha      // 3
         << ""feof(stdin): "" << bool(feof(stdin)) << endl
         << ""cin.eof(): "" << cin.eof() << endl;

    ch = char(getchar());  // 4
    cout << ch << endl;    // 5

    cout << boolalpha      // 6
         << ""feof(stdin): "" << bool(feof(stdin)) << endl
         << ""cin.eof(): "" << cin.eof() << endl;
}
