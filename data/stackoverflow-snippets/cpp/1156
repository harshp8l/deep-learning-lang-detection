#include <iostream>
#include <fstream>
using namespace std;


void AddFile(char old_name[], char old_content[]) {
    ofstream old_file;
    ifstream new_file;
    char new_name[255];
    int len, f_begin, f_end;
    cout << ""Enter the file name: "";
    /*cin.ignore();
    cin.getline(new_name, 255, '\n');*/
    cin >> new_name;
    strcat(new_name, "".txt"");
    new_file.open(new_name);
    old_file.open(old_name, ios::ios_base::app);
    char line[65535];
    while (new_file.getline(line, 65535))
    {
        old_file << endl << line;
    }
    new_file.close();
    old_file.close();

    //verify new data
    new_file.open(old_name);
    while (new_file.getline(line, 65535))
    {
        cout << line << endl;
    }

}

void main()
{
    AddFile(""hello.txt"", ""old data"");
}
