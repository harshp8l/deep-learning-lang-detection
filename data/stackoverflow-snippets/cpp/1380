#include <logging.hpp>

namespace app {

LOG_CONTEXT( ""app"" );

class Connector {
    LOG_CONTEXT( ""Connector"" );

public:
    void send( const std::string &  msg )
    {
        LOG_CONTEXT( ""send()"" );
        LOG_TRACE( msg );
    }
};

} // namespace app

void fn()
{
    LOG_DEBUG( ""in fn"" );
}

int main()
{
    LOG_CONTEXT( ""main()"" );
    LOGGER.set_level( spdlog::level::trace );
    LOG_INFO( ""starting app"" );
    fn();
    app::Connector c;
    c.send( ""hello world"" );
}
