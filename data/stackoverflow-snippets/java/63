static class Ticket1 implements Runnable{
    private final int tick = 10;
    private final Object obj = new Object();
    public void  run() {
        while(true)
        {

            synchronized(obj)
            {
                if(tick>0)
                {
                    try {
                        Thread.sleep(10);
                    } catch (InterruptedException e) {
                    }
                    System.out.println(Thread.currentThread().getName()+""sale:""+tick--);
                }
                else {
                    break;
                }
            }
        }
    }
}
