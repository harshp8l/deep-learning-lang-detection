public class Main {

    public static void main(String[] args) {
        String reversed = reverse(""Hello"");
        System.out.println(reversed);
    }

    private static String reverse(String word) {
        byte[] array = word.getBytes();
        int i = 0;
        int j = array.length - 1;
        byte tmp;
        while (j > i) {
            tmp = array[j];
            array[j] = array[i];
            array[i] = tmp;
            j--;
            i++;
        }
        return new String(array);
    }
}
