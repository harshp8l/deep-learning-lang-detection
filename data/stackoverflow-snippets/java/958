public class A {

    public static void main(String[] args) {
        //For how many rows, diagram have to be extended
        int totalRows  = 5;

        for(int rowNumber  =  1 ; rowNumber <totalRows ;++rowNumber) {

            //Inner loop starts
            for (int numberOfAstrix = 1; numberOfAstrix <= rowNumber; ++numberOfAstrix)
                System.out.print("*");
            //Inner loop ends here

            // New line
            System.out.println();

        }

    }

}
