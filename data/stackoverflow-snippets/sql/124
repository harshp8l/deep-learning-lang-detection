SELECT LastName
    ,FirstName
    ,BirthYear
    ,LocalExp
    ,TotalExp
    ,TotSalary
    ,TotFringe
    ,WorkLocationName
    ,SchoolName
FROM DPISTAFF2008   
WHERE FirstName = 'George'
UNION ALL
