t=# WITH RECURSIVE r AS (
select 1 i, 42540528727106962370088967606034759680 ip, null::text mod, null::text ff
union
select i+1 AS i,
div(ip,16),
mod(ip,16)::text,
to_hex(mod(ip,16)::int)
from r
where ip > 0
)
SELECT *,reverse(string_agg(ff,'') over ()) FROM r;
