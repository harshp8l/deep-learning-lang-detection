<script>
  function openEditModal(id) {

    //console.log(id);
    var url='getEditProductData.php?id='+id;
    $.ajax({
      url: url,
      type: 'GET',
      success: function (resp) {
        var json = $.parseJSON(resp);

        var idd=json.id;
        var name=json.name;
        $('#idd').val(idd);
        $('#productName').val(name);

        $('#editModal').modal('show');

      },
      error: function(e) {
        alert('Error: '+e);
      }
    });
  </script>
