Do{
     #Select-Machine
     write-Host ""input 1 or 2 - Choose Virtual Machine""
     if ($input = Read-Host ""type in 1 or 2""){
     switch ($input)
     {
           '1' {
                #1: Do Something
                Write-host '1 doing something'
                break
               } 

           '2' {
                #2: Do Something
                write-host '2 doing something'
                break
               } 
      }}
     }until($input -eq 'q')

Write-Host ""Another part of code""
