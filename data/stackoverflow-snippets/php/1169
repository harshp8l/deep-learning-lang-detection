<script>
    $(document).ready(function(){
        $('.add-cart').on('click', function () {
            var productName = $(this).closest('.pricing-item').find('h3 > b').text();
            var productPrice = $(this).closest('.pricing-item').find('.product-price').text();

            $.ajax({
                type: 'POST',
                data: {
                    name: productName,
                    price: productPrice,
                },
                dataType: 'json',
            });
        });
    });
</script>
