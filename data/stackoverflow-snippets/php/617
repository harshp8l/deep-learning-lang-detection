 <!DOCTYPE html>
        <html>
        <head>
          <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js">  </script>
          <script>
            $(document).ready(function(){
                $('#name').keyup(function () {
                    $('#display').text($(this).val());
                });
            });
          </script>
        </head>
         <body>
          <input type="text" id="name"/>
          <span id="display"></span>
        </body>
        </html>
