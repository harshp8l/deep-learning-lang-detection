    <textarea name="paragraph[]"></textarea><input type="button" onclick="addparagraph();" value="+"></input>
    <select name="font[]">
        <option>Tohoma</option>
        <option>Arial</option>
    </select>
    <div id="firstpart"></div>
    <input type="submit" value="submit"/>
