$recID = '55';

$results2 = $db2->query(""SELECT * FROM Movies WHERE TMDBid = '$recID'"");

$numrecs = 0;

while($row2 = $results2->fetchArray()){

    $numrecs++;

    $Runtime = $row2['Runtime'];
    $Budget = $row2['Budget'];
    $Revenue = $row2['Revenue'];
    $Production = $row2['Production'];

    echo $Runtime.'<br>';
    echo $Budget.'<br>';
    echo $Revenue.'<br>';
    echo $Production.'<br><br>';    

}

if ($numrecs == 0) {
    echo 'No Record Exists';
}
