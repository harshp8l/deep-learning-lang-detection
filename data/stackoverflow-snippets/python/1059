def vowel(func):
  def wrapper():
    vowels = ""aeiouAEIOU""
    vowel_count = 0
    start_val = func()
    for items in start_val:
      if items in vowels:
        vowel_count += 1
    return start_val, vowel_count
  return wrapper

def censorship(func):
  def wrapper():
     censorship_list = [""Word"", ""Word1"", ""Word2"", ""Word3""]
     string = func()
     for words in censorship_list:
       if words in string:
         raise ValueError(""You are not allowed to use those word(s) in set order: "")
     return string
  return wrapper

@vowel
@censorship
def sentence():
  sent = input(""Input your sentence: "")
  return sent
