def parse(infile):
    output = []
    while True:
        line = infile.readline()
        if line.startswith("">""):
            total = 0
            header = line.strip()
        elif line and line.strip():
            total += len(line.strip())
        else:
            output.append(header)
            output.append(total)
            if not line:
                break

    return output

def test_parse(func):
    with open(""input.txt"") as infile:
        assert parse(infile) == [
            "">header1"",
            32,
            "">header2"",
            24,
        ]
